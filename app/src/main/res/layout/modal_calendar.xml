<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FFFFFF"
    android:id="@+id/modalBottomSheetContainer"
    >

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:mcv_arrowColor="@color/black"
        app:mcv_headerTextAppearance="@style/TextAppearance.MyCustomMonthTitle"
        app:mcv_selectionColor="@color/purple_200"
        app:mcv_showOtherDates="all" />

    <TextView
        android:background="@drawable/shape_button_default"
        android:id="@+id/buttonSelectedDate"
        android:layout_width="match_parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:text="SELECT DATE"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="45dp"
        tools:ignore="HardcodedText" />

</androidx.appcompat.widget.LinearLayoutCompat>